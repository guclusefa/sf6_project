{% extends 'base.html.twig' %}

{% block title %}Personne index{% endblock %}

{% block body %}
    <h1>Personne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Name</th>
                <th>Age</th>
                <th>Image</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.firstname }}</td>
                <td>{{ personne.name }}</td>
                <td>{{ personne.age }}</td>
                <td>{{ personne.image }}</td>
                <td>{{ personne.createdAt ? personne.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ personne.updatedAt ? personne.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ personne.deletedAt ? personne.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_test_show', {'id': personne.id}) }}">show</a>
                    <a href="{{ path('app_test_edit', {'id': personne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_test_new') }}">Create new</a>
{% endblock %}
